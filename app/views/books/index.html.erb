<h1>Books</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error has occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th></th>
</tr>
</thead>

<tbody>
  <% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.body %></td>
<td><%= link_to "Show", book_path(book) %></td>
<td><%= link_to "Edit", edit_book_path(book) %></td>
<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "削除しますか？" %></td>
</tr>
<% end %>
</tbody>
</table>
<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <p class="ty">Title</p>
  <%= f.text_field :title %>

  <p class="ty">Body</p>
  <%= f.text_area :body %>

  <div class="action"></div>
  <%= f.submit 'Create Book' %>
<% end %>

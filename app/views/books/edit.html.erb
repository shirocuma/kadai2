<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <p class="ty">Title</p>
  <%= f.text_field :title %>
  
  <p class="ty">Body</p>
  <%= f.text_area :body %>
  
  <div class="action"></div>
  <%= f.submit 'Update Book' %>
  
  <div class="action"></div>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Edit", edit_book_path(@book.id) %>
<% end %>